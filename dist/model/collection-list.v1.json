{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Collection list",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of collections",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Collections",
            "type": "array",
            "items": {
                "$schema": "http://json-schema.org/draft-04/schema#",
                "title": "Collection snippet",
                "type": "object",
                "properties": {
                    "id": {
                        "description": "ID",
                        "type": "string",
                        "minLength": 1
                    },
                    "title": {
                        "description": "Title",
                        "type": "string"
                    },
                    "impactStatement": {
                        "description": "Description of the collection",
                        "type": "string"
                    },
                    "updated": {
                        "description": "Updated date (UTC)",
                        "type": "string",
                        "format": "date-time"
                    },
                    "image": {
                        "type": "object",
                        "properties": {
                            "thumbnail": {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "Thumbnail image",
                                "type": "object",
                                "properties": {
                                    "alt": {
                                        "title": "Alternative text",
                                        "type": "string"
                                    },
                                    "sizes": {
                                        "title": "Sizes",
                                        "type": "object",
                                        "properties": {
                                            "16:9": {
                                                "type": "object",
                                                "properties": {
                                                    "250": {
                                                        "title": "16:9 crop at 250px width",
                                                        "type": "string",
                                                        "format": "uri",
                                                        "pattern": "^https://"
                                                    },
                                                    "500": {
                                                        "title": "16:9 crop at 500px width",
                                                        "type": "string",
                                                        "format": "uri",
                                                        "pattern": "^https://"
                                                    }
                                                },
                                                "required": [
                                                    "250",
                                                    "500"
                                                ]
                                            },
                                            "1:1": {
                                                "type": "object",
                                                "properties": {
                                                    "70": {
                                                        "title": "1:1 crop at 70px width",
                                                        "type": "string",
                                                        "format": "uri",
                                                        "pattern": "^https://"
                                                    },
                                                    "140": {
                                                        "title": "1:1 crop at 140px width",
                                                        "type": "string",
                                                        "format": "uri",
                                                        "pattern": "^https://"
                                                    }
                                                },
                                                "required": [
                                                    "70",
                                                    "140"
                                                ]
                                            }
                                        },
                                        "required": [
                                            "16:9",
                                            "1:1"
                                        ]
                                    }
                                },
                                "required": [
                                    "alt",
                                    "sizes"
                                ]
                            }
                        },
                        "required": [
                            "thumbnail"
                        ]
                    },
                    "subjects": {
                        "description": "Collection subjects",
                        "type": "array",
                        "items": {
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "title": "Subject snippet",
                            "type": "object",
                            "properties": {
                                "id": {
                                    "description": "ID",
                                    "type": "string",
                                    "minLength": 1
                                },
                                "name": {
                                    "description": "Name",
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "required": [
                                "id",
                                "name"
                            ]
                        }
                    },
                    "selectedCurator": {
                        "allOf": [
                            {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "Person snippet",
                                "type": "object",
                                "allOf": [
                                    {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "Person",
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "title": "Name",
                                                "type": "object",
                                                "properties": {
                                                    "preferred": {
                                                        "title": "Preferred name",
                                                        "description": "This is generally the name that is used by the person for English-language publications.\n\nFor example:\n  - Randy Schekman\n  - K. VijayRaghavan\n  - Li Wenhui\n",
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "index": {
                                                        "title": "Index name",
                                                        "description": "This is the name that should be used for indexing people.\n\nFor example:\n  - Schekman, Randy\n  - VijayRaghavan, Krishnaswamy\n  - Li Wenhui\n"
                                                    }
                                                },
                                                "required": [
                                                    "preferred",
                                                    "index"
                                                ]
                                            },
                                            "orcid": {
                                                "title": "ORCID",
                                                "type": "string",
                                                "pattern": "^[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{3}[0-9X]$"
                                            }
                                        },
                                        "required": [
                                            "name"
                                        ]
                                    },
                                    {
                                        "properties": {
                                            "id": {
                                                "title": "ID",
                                                "type": "string",
                                                "minLength": 1
                                            },
                                            "type": {
                                                "title": "Type",
                                                "type": "string",
                                                "enum": [
                                                    "director",
                                                    "executive",
                                                    "leadership",
                                                    "reviewing-editor",
                                                    "senior-editor"
                                                ]
                                            },
                                            "image": {
                                                "$ref": "#/properties/items/items/properties/image/properties/thumbnail"
                                            }
                                        },
                                        "required": [
                                            "id",
                                            "type"
                                        ]
                                    }
                                ]
                            },
                            {
                                "properties": {
                                    "etAl": {
                                        "description": "If there are more curators.",
                                        "type": "boolean",
                                        "default": false
                                    }
                                }
                            }
                        ]
                    }
                },
                "required": [
                    "id",
                    "title",
                    "updated",
                    "image",
                    "selectedCurator"
                ]
            },
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
