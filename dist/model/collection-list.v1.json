{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Collection list",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of collections",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Collections",
            "type": "array",
            "items": {
                "$schema": "http://json-schema.org/draft-04/schema#",
                "title": "Collection snippet",
                "type": "object",
                "properties": {
                    "id": {
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "eLife ID",
                        "type": "string",
                        "pattern": "^[a-z0-9-]+$"
                    },
                    "title": {
                        "description": "Title",
                        "type": "string"
                    },
                    "impactStatement": {
                        "description": "Description of the collection",
                        "type": "string"
                    },
                    "published": {
                        "title": "Publication date (UTC)",
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "description": "eLife restriction over the ISO8601 standard\n\nFor example:\n    - 2016-09-16T12:34:56Z\n",
                        "type": "string",
                        "format": "date-time",
                        "pattern": "^....-..-..T..:..:..Z$"
                    },
                    "updated": {
                        "title": "Updated date (UTC)",
                        "$ref": "#/properties/items/items/properties/published"
                    },
                    "image": {
                        "type": "object",
                        "properties": {
                            "thumbnail": {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "IIIF image",
                                "type": "object",
                                "properties": {
                                    "uri": {
                                        "title": "IIIF Image",
                                        "type": "string",
                                        "format": "uri",
                                        "pattern": "^https://"
                                    },
                                    "alt": {
                                        "title": "Alternative text",
                                        "type": "string"
                                    },
                                    "source": {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "File",
                                        "type": "object",
                                        "properties": {
                                            "mediaType": {
                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                "title": "Media type",
                                                "type": "string",
                                                "pattern": "^([a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+/[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+)(; *[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+=(([a-zA-Z0-9\\.\\-]+)|(\".+\")))*$"
                                            },
                                            "uri": {
                                                "title": "Source data URI",
                                                "type": "string",
                                                "format": "uri"
                                            },
                                            "filename": {
                                                "title": "Filename",
                                                "type": "string",
                                                "pattern": "^[A-Za-z0-9_. ()-]+\\.[a-z0-9]+$"
                                            }
                                        },
                                        "required": [
                                            "mediaType",
                                            "uri",
                                            "filename"
                                        ]
                                    },
                                    "size": {
                                        "type": "object",
                                        "properties": {
                                            "width": {
                                                "type": "integer",
                                                "minimum": 1
                                            },
                                            "height": {
                                                "type": "integer",
                                                "minimum": 1
                                            }
                                        },
                                        "required": [
                                            "width",
                                            "height"
                                        ]
                                    },
                                    "focalPoint": {
                                        "type": "object",
                                        "title": "Focal point",
                                        "description": "Point on the image that is considered to be the focal point of the image.\n\nIf not present, 50 can be used for both `x` and `y`.\n",
                                        "properties": {
                                            "x": {
                                                "description": "Percentage on the horizontal axis.\n",
                                                "type": "integer",
                                                "minimum": 0,
                                                "maximum": 100
                                            },
                                            "y": {
                                                "description": "Percentage on the vertical axis.\n",
                                                "type": "integer",
                                                "minimum": 0,
                                                "maximum": 100
                                            }
                                        },
                                        "required": [
                                            "x",
                                            "y"
                                        ]
                                    }
                                },
                                "required": [
                                    "uri",
                                    "alt",
                                    "source",
                                    "size"
                                ]
                            }
                        },
                        "required": [
                            "thumbnail"
                        ]
                    },
                    "subjects": {
                        "description": "Collection subjects",
                        "type": "array",
                        "items": {
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "title": "Subject snippet",
                            "type": "object",
                            "properties": {
                                "id": {
                                    "$ref": "#/properties/items/items/properties/id"
                                },
                                "name": {
                                    "description": "Name",
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "required": [
                                "id",
                                "name"
                            ]
                        }
                    },
                    "selectedCurator": {
                        "allOf": [
                            {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "Person snippet",
                                "type": "object",
                                "allOf": [
                                    {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "Person",
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "title": "Name",
                                                "type": "object",
                                                "properties": {
                                                    "preferred": {
                                                        "title": "Preferred name",
                                                        "description": "This is generally the name that is used by the person for English-language publications.\n\nFor example:\n  - Randy Schekman\n  - K. VijayRaghavan\n  - Li Wenhui\n",
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "index": {
                                                        "title": "Index name",
                                                        "description": "This is the name that should be used for indexing people.\n\nFor example:\n  - Schekman, Randy\n  - VijayRaghavan, Krishnaswamy\n  - Li Wenhui\n"
                                                    }
                                                },
                                                "required": [
                                                    "preferred",
                                                    "index"
                                                ]
                                            },
                                            "orcid": {
                                                "title": "ORCID",
                                                "type": "string",
                                                "pattern": "^[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{3}[0-9X]$"
                                            }
                                        },
                                        "required": [
                                            "name"
                                        ]
                                    },
                                    {
                                        "properties": {
                                            "id": {
                                                "$ref": "#/properties/items/items/properties/id"
                                            },
                                            "type": {
                                                "title": "Type",
                                                "type": "string",
                                                "enum": [
                                                    "director",
                                                    "executive",
                                                    "leadership",
                                                    "reviewing-editor",
                                                    "senior-editor"
                                                ]
                                            },
                                            "image": {
                                                "$ref": "#/properties/items/items/properties/image/properties/thumbnail"
                                            }
                                        },
                                        "required": [
                                            "id",
                                            "type"
                                        ]
                                    }
                                ]
                            },
                            {
                                "properties": {
                                    "etAl": {
                                        "description": "If there are more curators.",
                                        "type": "boolean",
                                        "default": false
                                    }
                                }
                            }
                        ]
                    }
                },
                "required": [
                    "id",
                    "title",
                    "published",
                    "image",
                    "selectedCurator"
                ]
            },
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
