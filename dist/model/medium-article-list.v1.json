{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Medium article list",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of Medium articles",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Medium articles",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "uri": {
                        "description": "Article URI",
                        "type": "string",
                        "format": "uri"
                    },
                    "title": {
                        "description": "Title",
                        "type": "string"
                    },
                    "impactStatement": {
                        "description": "Description of the article",
                        "type": "string"
                    },
                    "published": {
                        "description": "Publication date (UTC)",
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "Date-time ISO8601 with numeric UTC timezone",
                        "type": "string",
                        "format": "date-time",
                        "pattern": "^....-..-..T..:..:..Z$"
                    },
                    "image": {
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "IIIF image",
                        "type": "object",
                        "properties": {
                            "uri": {
                                "title": "IIIF Image",
                                "type": "string",
                                "format": "uri",
                                "pattern": "^https://"
                            },
                            "alt": {
                                "title": "Alternative text",
                                "type": "string"
                            },
                            "source": {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "File",
                                "type": "object",
                                "properties": {
                                    "mediaType": {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "Media type",
                                        "type": "string",
                                        "pattern": "^([a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+/[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+)(; *[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+=(([a-zA-Z0-9\\.\\-]+)|(\".+\")))*$"
                                    },
                                    "uri": {
                                        "title": "Source data URI",
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "filename": {
                                        "title": "Filename",
                                        "type": "string",
                                        "pattern": "^[A-Za-z0-9_. ()-]+\\.[a-z0-9]+$"
                                    }
                                },
                                "required": [
                                    "mediaType",
                                    "uri",
                                    "filename"
                                ]
                            },
                            "size": {
                                "type": "object",
                                "properties": {
                                    "width": {
                                        "type": "integer",
                                        "minimum": 1
                                    },
                                    "height": {
                                        "type": "integer",
                                        "minimum": 1
                                    }
                                },
                                "required": [
                                    "width",
                                    "height"
                                ]
                            },
                            "focalPoint": {
                                "type": "object",
                                "title": "Focal point",
                                "description": "Point on the image that is considered to be the focal point of the image.\n\nIf not present, 50 can be used for both `x` and `y`.\n",
                                "properties": {
                                    "x": {
                                        "description": "Percentage on the horizontal axis.\n",
                                        "type": "integer",
                                        "minimum": 0,
                                        "maximum": 100
                                    },
                                    "y": {
                                        "description": "Percentage on the vertical axis.\n",
                                        "type": "integer",
                                        "minimum": 0,
                                        "maximum": 100
                                    }
                                },
                                "required": [
                                    "x",
                                    "y"
                                ]
                            }
                        },
                        "required": [
                            "uri",
                            "alt",
                            "source",
                            "size"
                        ]
                    }
                },
                "required": [
                    "uri",
                    "title",
                    "published"
                ]
            },
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
