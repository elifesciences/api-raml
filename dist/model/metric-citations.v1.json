{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Citations metric list",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "service": {
                "type": "string",
                "minLength": 1
            },
            "uri": {
                "type": "string",
                "format": "uri"
            },
            "citations": {
                "type": "integer",
                "minimum": 0
            }
        },
        "required": [
            "service",
            "uri",
            "citations"
        ]
    },
    "uniqueItems": true,
    "minItems": 1
}
