{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Article PoA",
    "type": "object",
    "allOf": [
        {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "Article",
            "type": "object",
            "allOf": [
                {
                    "$schema": "http://json-schema.org/draft-04/schema#",
                    "title": "Article snippet",
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "minLength": 1
                        },
                        "version": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "type": {
                            "type": "string",
                            "enum": [
                                "correction",
                                "editorial",
                                "feature",
                                "insight",
                                "research-advance",
                                "research-article",
                                "research-exchange",
                                "retraction",
                                "registered-report",
                                "replication-study",
                                "short-report",
                                "tools-resources"
                            ]
                        },
                        "doi": {
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "title": "DOI",
                            "type": "string",
                            "pattern": "^10[.][0-9]{4,}[^\\s\"/<>]*/[^\\s\"]+$"
                        },
                        "authorLine": {
                            "description": "For example:\n  - Ian T Baldwin\n  - Randy Schekman, Mark Patterson\n  - Lee R Berger et al\n",
                            "type": "string",
                            "minLength": 1
                        },
                        "title": {
                            "type": "string",
                            "minLength": 1
                        },
                        "titlePrefix": {
                            "type": "string",
                            "minLength": 1
                        },
                        "published": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "volume": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "elocationId": {
                            "type": "string",
                            "minLength": 1
                        },
                        "pdf": {
                            "type": "string",
                            "format": "uri"
                        },
                        "subjects": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "uniqueItems": true
                        },
                        "researchOrganisms": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "uniqueItems": true
                        },
                        "abstract": {
                            "type": "object",
                            "properties": {
                                "content": {
                                    "type": "array",
                                    "items": {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "Paragraph",
                                        "type": "object",
                                        "properties": {
                                            "type": {
                                                "type": "string",
                                                "enum": [
                                                    "paragraph"
                                                ]
                                            },
                                            "text": {
                                                "title": "Text",
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "type",
                                            "text"
                                        ]
                                    },
                                    "minItems": 1
                                }
                            },
                            "required": [
                                "content"
                            ]
                        }
                    },
                    "required": [
                        "status",
                        "id",
                        "version",
                        "type",
                        "doi",
                        "authorLine",
                        "title",
                        "published",
                        "volume",
                        "elocationId"
                    ]
                },
                {
                    "properties": {
                        "issue": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "copyright": {
                            "allOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "statement": {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    },
                                    "required": [
                                        "statement"
                                    ]
                                },
                                {
                                    "oneOf": [
                                        {
                                            "properties": {
                                                "license": {
                                                    "type": "string",
                                                    "enum": [
                                                        "CC0-1.0"
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "license"
                                            ]
                                        },
                                        {
                                            "properties": {
                                                "license": {
                                                    "type": "string",
                                                    "enum": [
                                                        "CC-BY-1.0",
                                                        "CC-BY-2.0",
                                                        "CC-BY-2.5",
                                                        "CC-BY-3.0",
                                                        "CC-BY-4.0"
                                                    ]
                                                },
                                                "holder": {
                                                    "type": "string",
                                                    "minLength": 1
                                                }
                                            },
                                            "required": [
                                                "license",
                                                "holder"
                                            ]
                                        }
                                    ]
                                }
                            ]
                        },
                        "authors": {
                            "type": "array",
                            "items": {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "Author",
                                "type": "object",
                                "required": [
                                    "type"
                                ],
                                "oneOf": [
                                    {
                                        "properties": {
                                            "type": {
                                                "type": "string",
                                                "enum": [
                                                    "on-behalf-of"
                                                ],
                                                "onBehalfOf": {
                                                    "type": "string",
                                                    "minLenght": 1
                                                }
                                            }
                                        },
                                        "required": [
                                            "onBehalfOf"
                                        ]
                                    },
                                    {
                                        "allOf": [
                                            {
                                                "properties": {
                                                    "affiliations": {
                                                        "type": "array",
                                                        "items": {
                                                            "$ref": "#/allOf/0/allOf/1/properties/relatedArticles/items/oneOf/2/allOf/1/properties/journal"
                                                        }
                                                    },
                                                    "competingInterests": {
                                                        "title": "Competing interests statement",
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "contribution": {
                                                        "title": "Author contribution",
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "emailAddresses": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "string",
                                                            "format": "email"
                                                        }
                                                    },
                                                    "equalContributionGroups": {
                                                        "title": "Equal contribution group IDs",
                                                        "description": "Authors that contribute equally are linked together through a generated ID.\n\nIDs will only be included if it is shared between two or more authors.\n",
                                                        "type": "array",
                                                        "items": {
                                                            "type": "integer",
                                                            "minimum": 1
                                                        }
                                                    },
                                                    "phoneNumbers": {
                                                        "type": "array",
                                                        "items": {
                                                            "$schema": "http://json-schema.org/draft-04/schema#",
                                                            "title": "Phone number",
                                                            "description": "Phone number in E.164 format.\n\nFor example:\n  - +447700900415\n  - +12025550182;ext=555\n",
                                                            "type": "string",
                                                            "pattern": "^\\+[0-9]{8,15}(;ext=[0-9]+)?$"
                                                        }
                                                    },
                                                    "postalAddresses": {
                                                        "type": "array",
                                                        "items": {
                                                            "$schema": "http://json-schema.org/draft-04/schema#",
                                                            "title": "Address",
                                                            "type": "object",
                                                            "properties": {
                                                                "formatted": {
                                                                    "title": "Formatted address",
                                                                    "type": "array",
                                                                    "items": {
                                                                        "type": "string",
                                                                        "minLength": 1
                                                                    },
                                                                    "minItems": 1
                                                                },
                                                                "components": {
                                                                    "title": "Address components",
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "streetAddress": {
                                                                            "type": "array",
                                                                            "items": {
                                                                                "type": "string",
                                                                                "minLength": 1
                                                                            }
                                                                        },
                                                                        "locality": {
                                                                            "type": "array",
                                                                            "items": {
                                                                                "type": "string",
                                                                                "minLength": 1
                                                                            }
                                                                        },
                                                                        "area": {
                                                                            "type": "array",
                                                                            "items": {
                                                                                "type": "string",
                                                                                "minLength": 1
                                                                            }
                                                                        },
                                                                        "country": {
                                                                            "type": "string",
                                                                            "minLength": 1
                                                                        },
                                                                        "postalCode": {
                                                                            "type": "string",
                                                                            "minLength": 1
                                                                        }
                                                                    },
                                                                    "minProperties": 1
                                                                }
                                                            },
                                                            "required": [
                                                                "formatted",
                                                                "components"
                                                            ]
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "oneOf": [
                                                    {
                                                        "allOf": [
                                                            {
                                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                                "title": "Person",
                                                                "type": "object",
                                                                "properties": {
                                                                    "name": {
                                                                        "title": "Name",
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "preferred": {
                                                                                "title": "Preferred name",
                                                                                "description": "This is generally the name that is used by the person for English-language publications.\n\nFor example:\n  - Randy Schekman\n  - K. VijayRaghavan\n  - Li Wenhui\n",
                                                                                "type": "string",
                                                                                "minLength": 1
                                                                            },
                                                                            "index": {
                                                                                "title": "Index name",
                                                                                "description": "This is the name that should be used for indexing people.\n\nFor example:\n  - Schekman, Randy\n  - VijayRaghavan, Krishnaswamy\n  - Li Wenhui\n"
                                                                            }
                                                                        },
                                                                        "required": [
                                                                            "preferred",
                                                                            "index"
                                                                        ]
                                                                    },
                                                                    "orcid": {
                                                                        "title": "ORCID",
                                                                        "type": "string",
                                                                        "pattern": "^[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{3}[0-9X]$"
                                                                    }
                                                                },
                                                                "required": [
                                                                    "name"
                                                                ]
                                                            },
                                                            {
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "string",
                                                                        "enum": [
                                                                            "person"
                                                                        ]
                                                                    },
                                                                    "deceased": {
                                                                        "description": "Whether the person was deceased when the article was published.",
                                                                        "type": "boolean",
                                                                        "default": false
                                                                    }
                                                                }
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "allOf": [
                                                            {
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "string",
                                                                        "enum": [
                                                                            "group"
                                                                        ]
                                                                    },
                                                                    "name": {
                                                                        "type": "string",
                                                                        "minLength": 1
                                                                    }
                                                                },
                                                                "required": [
                                                                    "name"
                                                                ]
                                                            },
                                                            {
                                                                "anyOf": [
                                                                    {
                                                                        "not": {
                                                                            "required": [
                                                                                "groups",
                                                                                "people"
                                                                            ]
                                                                        }
                                                                    },
                                                                    {
                                                                        "properties": {
                                                                            "people": {
                                                                                "type": "array",
                                                                                "items": {
                                                                                    "$ref": "#/allOf/0/allOf/1/properties/authors/items/oneOf/1/allOf/1/oneOf/0/allOf/0"
                                                                                },
                                                                                "minItems": 2
                                                                            }
                                                                        },
                                                                        "required": [
                                                                            "people"
                                                                        ],
                                                                        "not": {
                                                                            "required": [
                                                                                "groups"
                                                                            ]
                                                                        }
                                                                    },
                                                                    {
                                                                        "properties": {
                                                                            "groups": {
                                                                                "type": "object",
                                                                                "additionalProperties": {
                                                                                    "type": "array",
                                                                                    "items": {
                                                                                        "$ref": "#/allOf/0/allOf/1/properties/authors/items/oneOf/1/allOf/1/oneOf/0/allOf/0"
                                                                                    },
                                                                                    "minItems": 2
                                                                                },
                                                                                "minProperties": 2
                                                                            }
                                                                        },
                                                                        "required": [
                                                                            "groups"
                                                                        ],
                                                                        "not": {
                                                                            "required": [
                                                                                "people"
                                                                            ]
                                                                        }
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            },
                            "minItems": 1
                        },
                        "relatedArticles": {
                            "type": "array",
                            "items": {
                                "oneOf": [
                                    {
                                        "$ref": "#/allOf/1"
                                    },
                                    {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "Article VoR snippet",
                                        "type": "object",
                                        "allOf": [
                                            {
                                                "$ref": "#/allOf/0/allOf/0"
                                            },
                                            {
                                                "properties": {
                                                    "status": {
                                                        "type": "string",
                                                        "enum": [
                                                            "vor"
                                                        ]
                                                    },
                                                    "impactStatement": {
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "abstract": {
                                                        "type": "object",
                                                        "properties": {
                                                            "doi": {
                                                                "$ref": "#/allOf/0/allOf/0/properties/doi"
                                                            }
                                                        },
                                                        "required": [
                                                            "doi"
                                                        ]
                                                    },
                                                    "image": {
                                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                                        "title": "Image",
                                                        "type": "object",
                                                        "properties": {
                                                            "alt": {
                                                                "title": "Alternative text",
                                                                "type": "string"
                                                            },
                                                            "sizes": {
                                                                "title": "Sizes",
                                                                "type": "object",
                                                                "properties": {
                                                                    "2:1": {
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "900": {
                                                                                "title": "2:1 crop at 900px width",
                                                                                "type": "string",
                                                                                "format": "uri",
                                                                                "pattern": "^https://"
                                                                            },
                                                                            "1800": {
                                                                                "title": "2:1 crop at 1800px width",
                                                                                "type": "string",
                                                                                "format": "uri",
                                                                                "pattern": "^https://"
                                                                            }
                                                                        },
                                                                        "required": [
                                                                            "900",
                                                                            "1800"
                                                                        ]
                                                                    },
                                                                    "16:9": {
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "250": {
                                                                                "title": "16:9 crop at 250px width",
                                                                                "type": "string",
                                                                                "format": "uri",
                                                                                "pattern": "^https://"
                                                                            },
                                                                            "500": {
                                                                                "title": "16:9 crop at 500px width",
                                                                                "type": "string",
                                                                                "format": "uri",
                                                                                "pattern": "^https://"
                                                                            }
                                                                        },
                                                                        "required": [
                                                                            "250",
                                                                            "500"
                                                                        ]
                                                                    },
                                                                    "1:1": {
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "70": {
                                                                                "title": "1:1 crop at 70px width",
                                                                                "type": "string",
                                                                                "format": "uri",
                                                                                "pattern": "^https://"
                                                                            },
                                                                            "140": {
                                                                                "title": "1:1 crop at 140px width",
                                                                                "type": "string",
                                                                                "format": "uri",
                                                                                "pattern": "^https://"
                                                                            }
                                                                        },
                                                                        "required": [
                                                                            "70",
                                                                            "140"
                                                                        ]
                                                                    }
                                                                },
                                                                "required": [
                                                                    "2:1",
                                                                    "16:9",
                                                                    "1:1"
                                                                ]
                                                            }
                                                        },
                                                        "required": [
                                                            "alt",
                                                            "sizes"
                                                        ]
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "allOf": [
                                            {
                                                "properties": {
                                                    "type": {
                                                        "type": "string",
                                                        "enum": [
                                                            "external-article"
                                                        ]
                                                    }
                                                }
                                            },
                                            {
                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                "title": "External article",
                                                "type": "object",
                                                "properties": {
                                                    "articleTitle": {
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "journal": {
                                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                                        "title": "Place",
                                                        "type": "object",
                                                        "properties": {
                                                            "id": {
                                                                "title": "Google Place ID",
                                                                "type": "string",
                                                                "minLength": 1
                                                            },
                                                            "coordinates": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "latitude": {
                                                                        "type": "number",
                                                                        "maximum": 90,
                                                                        "minimum": -90
                                                                    },
                                                                    "longitude": {
                                                                        "type": "number",
                                                                        "maximum": 180,
                                                                        "minimum": -180
                                                                    }
                                                                },
                                                                "required": [
                                                                    "latitude",
                                                                    "longitude"
                                                                ]
                                                            },
                                                            "name": {
                                                                "type": "array",
                                                                "items": {
                                                                    "type": "string",
                                                                    "minLength": 1
                                                                },
                                                                "minItems": 1
                                                            },
                                                            "address": {
                                                                "$ref": "#/allOf/0/allOf/1/properties/authors/items/oneOf/1/allOf/0/properties/postalAddresses/items"
                                                            }
                                                        },
                                                        "required": [
                                                            "name"
                                                        ],
                                                        "dependencies": {
                                                            "id": [
                                                                "coordinates"
                                                            ],
                                                            "coordinates": [
                                                                "address"
                                                            ]
                                                        }
                                                    },
                                                    "authorLine": {
                                                        "description": "For example:\n  - Ian T Baldwin\n  - Randy Schekman, Mark Patterson\n  - Lee R Berger et al\n",
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "uri": {
                                                        "type": "string",
                                                        "format": "uri"
                                                    }
                                                },
                                                "required": [
                                                    "articleTitle",
                                                    "journal",
                                                    "authorLine",
                                                    "uri"
                                                ]
                                            }
                                        ]
                                    }
                                ],
                                "uniqueItems": true
                            }
                        }
                    },
                    "required": [
                        "copyright",
                        "authors"
                    ]
                }
            ]
        },
        {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "Article PoA snippet",
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/allOf/0/allOf/0"
                },
                {
                    "properties": {
                        "status": {
                            "type": "string",
                            "enum": [
                                "poa"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}
