{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Blog article list",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of blog articles",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Blog article",
            "type": "array",
            "items": {
                "$schema": "http://json-schema.org/draft-04/schema#",
                "title": "Blog article snippet",
                "type": "object",
                "properties": {
                    "id": {
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "eLife ID",
                        "type": "string",
                        "pattern": "^[a-z0-9-]+$"
                    },
                    "title": {
                        "description": "Title",
                        "type": "string"
                    },
                    "impactStatement": {
                        "description": "Description of the article",
                        "type": "string"
                    },
                    "published": {
                        "description": "Publication date (UTC)",
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "Date-time ISO8601 with numeric UTC timezone",
                        "type": "string",
                        "format": "date-time",
                        "pattern": "^....-..-..T..:..:..Z$"
                    },
                    "subjects": {
                        "description": "Article subjects",
                        "type": "array",
                        "items": {
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "title": "Subject snippet",
                            "type": "object",
                            "properties": {
                                "id": {
                                    "$ref": "#/properties/items/items/properties/id"
                                },
                                "name": {
                                    "description": "Name",
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "required": [
                                "id",
                                "name"
                            ]
                        },
                        "uniqueItems": true
                    }
                },
                "required": [
                    "id",
                    "title",
                    "published"
                ]
            },
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
