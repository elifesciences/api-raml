{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Blog article list",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of blog articles",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Blog article",
            "type": "array",
            "items": {
                "$schema": "http://json-schema.org/draft-04/schema#",
                "title": "Blog article snippet",
                "type": "object",
                "properties": {
                    "id": {
                        "description": "ID",
                        "type": "string",
                        "minLength": 1
                    },
                    "title": {
                        "description": "Title",
                        "type": "string"
                    },
                    "impactStatement": {
                        "description": "Description of the article",
                        "type": "string"
                    },
                    "published": {
                        "description": "Publication date (UTC)",
                        "type": "string",
                        "format": "date-time"
                    },
                    "subjects": {
                        "description": "Article subject IDs",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        },
                        "uniqueItems": true
                    }
                },
                "required": [
                    "id",
                    "title",
                    "published"
                ]
            },
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
