{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Article list",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of articles",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Articles",
            "type": "array",
            "items": [
                {
                    "oneOf": [
                        {
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "title": "Article PoA snippet",
                            "type": "object",
                            "allOf": [
                                {
                                    "$ref": "#/properties/items/items/0/oneOf/1/allOf/0"
                                },
                                {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "enum": [
                                                "poa"
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "title": "Article VoR snippet",
                            "type": "object",
                            "allOf": [
                                {
                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                    "title": "Article snippet",
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "$schema": "http://json-schema.org/draft-04/schema#",
                                            "title": "eLife ID",
                                            "type": "string",
                                            "pattern": "^[a-z0-9-]+$"
                                        },
                                        "version": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "type": {
                                            "type": "string",
                                            "enum": [
                                                "correction",
                                                "editorial",
                                                "feature",
                                                "insight",
                                                "research-advance",
                                                "research-article",
                                                "research-exchange",
                                                "retraction",
                                                "registered-report",
                                                "replication-study",
                                                "short-report",
                                                "tools-resources"
                                            ]
                                        },
                                        "doi": {
                                            "$schema": "http://json-schema.org/draft-04/schema#",
                                            "title": "DOI",
                                            "type": "string",
                                            "pattern": "^10[.][0-9]{4,}[^\\s\"/<>]*/[^\\s\"]+$"
                                        },
                                        "authorLine": {
                                            "description": "For example:\n  - Ian T Baldwin\n  - Randy Schekman, Mark Patterson\n  - Lee R Berger et al\n",
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "title": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "titlePrefix": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "stage": {
                                            "type": "string",
                                            "enum": [
                                                "preview",
                                                "published"
                                            ]
                                        },
                                        "published": {
                                            "description": "Date and time this article was first published.\nNot present if 'stage' is 'preview' and version is '1'.\n",
                                            "$schema": "http://json-schema.org/draft-04/schema#",
                                            "title": "Date-time ISO8601 with numeric UTC timezone",
                                            "type": "string",
                                            "format": "date-time",
                                            "pattern": "^....-..-..T..:..:..Z$"
                                        },
                                        "versionDate": {
                                            "description": "Date and time this version of the article was published.\nOnly present if 'stage' is 'published'.\n",
                                            "$ref": "#/properties/items/items/0/oneOf/1/allOf/0/properties/published"
                                        },
                                        "statusDate": {
                                            "description": "Date and time this article transitioned to current status.\nNot present if 'stage' is 'preview' and version is '1'.\n",
                                            "$ref": "#/properties/items/items/0/oneOf/1/allOf/0/properties/published"
                                        },
                                        "volume": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "elocationId": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "pdf": {
                                            "type": "string",
                                            "format": "uri"
                                        },
                                        "subjects": {
                                            "type": "array",
                                            "items": {
                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                "title": "Subject snippet",
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "$ref": "#/properties/items/items/0/oneOf/1/allOf/0/properties/id"
                                                    },
                                                    "name": {
                                                        "description": "Name",
                                                        "type": "string",
                                                        "minLength": 1
                                                    }
                                                },
                                                "required": [
                                                    "id",
                                                    "name"
                                                ]
                                            },
                                            "uniqueItems": true
                                        },
                                        "researchOrganisms": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "minLength": 1
                                            },
                                            "uniqueItems": true
                                        },
                                        "abstract": {
                                            "type": "object",
                                            "properties": {
                                                "content": {
                                                    "type": "array",
                                                    "items": {
                                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                                        "title": "Paragraph",
                                                        "type": "object",
                                                        "properties": {
                                                            "type": {
                                                                "type": "string",
                                                                "enum": [
                                                                    "paragraph"
                                                                ]
                                                            },
                                                            "text": {
                                                                "title": "Text",
                                                                "type": "string"
                                                            }
                                                        },
                                                        "required": [
                                                            "type",
                                                            "text"
                                                        ]
                                                    },
                                                    "minItems": 1
                                                }
                                            },
                                            "required": [
                                                "content"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "status",
                                        "id",
                                        "version",
                                        "type",
                                        "doi",
                                        "authorLine",
                                        "title",
                                        "stage",
                                        "volume",
                                        "elocationId"
                                    ]
                                },
                                {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "enum": [
                                                "vor"
                                            ]
                                        },
                                        "impactStatement": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "abstract": {
                                            "type": "object",
                                            "properties": {
                                                "doi": {
                                                    "$ref": "#/properties/items/items/0/oneOf/1/allOf/0/properties/doi"
                                                }
                                            }
                                        },
                                        "image": {
                                            "type": "object",
                                            "properties": {
                                                "thumbnail": {
                                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                                    "title": "Thumbnail image",
                                                    "type": "object",
                                                    "properties": {
                                                        "alt": {
                                                            "title": "Alternative text",
                                                            "type": "string"
                                                        },
                                                        "sizes": {
                                                            "title": "Sizes",
                                                            "type": "object",
                                                            "properties": {
                                                                "16:9": {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "250": {
                                                                            "title": "16:9 crop at 250px width",
                                                                            "type": "string",
                                                                            "format": "uri",
                                                                            "pattern": "^https://"
                                                                        },
                                                                        "500": {
                                                                            "title": "16:9 crop at 500px width",
                                                                            "type": "string",
                                                                            "format": "uri",
                                                                            "pattern": "^https://"
                                                                        }
                                                                    },
                                                                    "required": [
                                                                        "250",
                                                                        "500"
                                                                    ]
                                                                },
                                                                "1:1": {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "70": {
                                                                            "title": "1:1 crop at 70px width",
                                                                            "type": "string",
                                                                            "format": "uri",
                                                                            "pattern": "^https://"
                                                                        },
                                                                        "140": {
                                                                            "title": "1:1 crop at 140px width",
                                                                            "type": "string",
                                                                            "format": "uri",
                                                                            "pattern": "^https://"
                                                                        }
                                                                    },
                                                                    "required": [
                                                                        "70",
                                                                        "140"
                                                                    ]
                                                                }
                                                            },
                                                            "required": [
                                                                "16:9",
                                                                "1:1"
                                                            ]
                                                        }
                                                    },
                                                    "required": [
                                                        "alt",
                                                        "sizes"
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "thumbnail"
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            ],
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
