{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Recommendations list",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of recommendations",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Recommendations",
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "Article PoA snippet",
                        "type": "object",
                        "allOf": [
                            {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "Article snippet",
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "eLife ID",
                                        "type": "string",
                                        "pattern": "^[a-z0-9-]+$"
                                    },
                                    "version": {
                                        "type": "integer",
                                        "minimum": 1
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "correction",
                                            "editorial",
                                            "feature",
                                            "insight",
                                            "research-advance",
                                            "research-article",
                                            "research-exchange",
                                            "retraction",
                                            "registered-report",
                                            "replication-study",
                                            "short-report",
                                            "tools-resources"
                                        ]
                                    },
                                    "doi": {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "DOI",
                                        "type": "string",
                                        "pattern": "^10[.][0-9]{4,}[^\\s\"/<>]*/[^\\s\"]+$"
                                    },
                                    "authorLine": {
                                        "description": "For example:\n  - Ian T Baldwin\n  - Randy Schekman, Mark Patterson\n  - Lee R Berger et al\n",
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "title": {
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "titlePrefix": {
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "stage": {
                                        "type": "string",
                                        "enum": [
                                            "preview",
                                            "published"
                                        ]
                                    },
                                    "published": {
                                        "description": "Date and time this article was first published.\nNot present if 'stage' is 'preview' and version is '1'.\n",
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "Date-time ISO8601 with numeric UTC timezone",
                                        "type": "string",
                                        "format": "date-time",
                                        "pattern": "^....-..-..T..:..:..Z$"
                                    },
                                    "versionDate": {
                                        "description": "Date and time this version of the article was published.\nOnly present if 'stage' is 'published'.\n",
                                        "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/published"
                                    },
                                    "statusDate": {
                                        "description": "Date and time this article transitioned to current status.\nNot present if 'stage' is 'preview' and version is '1'.\n",
                                        "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/published"
                                    },
                                    "volume": {
                                        "type": "integer",
                                        "minimum": 1
                                    },
                                    "elocationId": {
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "pdf": {
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "subjects": {
                                        "type": "array",
                                        "items": {
                                            "$schema": "http://json-schema.org/draft-04/schema#",
                                            "title": "Subject snippet",
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/id"
                                                },
                                                "name": {
                                                    "description": "Name",
                                                    "type": "string",
                                                    "minLength": 1
                                                }
                                            },
                                            "required": [
                                                "id",
                                                "name"
                                            ]
                                        },
                                        "uniqueItems": true
                                    },
                                    "researchOrganisms": {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "uniqueItems": true
                                    },
                                    "abstract": {
                                        "type": "object",
                                        "properties": {
                                            "content": {
                                                "type": "array",
                                                "items": {
                                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                                    "title": "Paragraph",
                                                    "type": "object",
                                                    "properties": {
                                                        "type": {
                                                            "type": "string",
                                                            "enum": [
                                                                "paragraph"
                                                            ]
                                                        },
                                                        "text": {
                                                            "title": "Text",
                                                            "type": "string"
                                                        }
                                                    },
                                                    "required": [
                                                        "type",
                                                        "text"
                                                    ]
                                                },
                                                "minItems": 1
                                            }
                                        },
                                        "required": [
                                            "content"
                                        ]
                                    }
                                },
                                "required": [
                                    "status",
                                    "id",
                                    "version",
                                    "type",
                                    "doi",
                                    "title",
                                    "stage",
                                    "volume",
                                    "elocationId"
                                ]
                            },
                            {
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "poa"
                                        ]
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "Article VoR snippet",
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "#/properties/items/items/oneOf/0/allOf/0"
                            },
                            {
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "vor"
                                        ]
                                    },
                                    "impactStatement": {
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "abstract": {
                                        "type": "object",
                                        "properties": {
                                            "doi": {
                                                "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/doi"
                                            }
                                        }
                                    },
                                    "image": {
                                        "type": "object",
                                        "properties": {
                                            "thumbnail": {
                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                "title": "Thumbnail image",
                                                "type": "object",
                                                "properties": {
                                                    "alt": {
                                                        "title": "Alternative text",
                                                        "type": "string"
                                                    },
                                                    "sizes": {
                                                        "title": "Sizes",
                                                        "type": "object",
                                                        "properties": {
                                                            "16:9": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "250": {
                                                                        "title": "16:9 crop at 250px width",
                                                                        "type": "string",
                                                                        "format": "uri",
                                                                        "pattern": "^https://"
                                                                    },
                                                                    "500": {
                                                                        "title": "16:9 crop at 500px width",
                                                                        "type": "string",
                                                                        "format": "uri",
                                                                        "pattern": "^https://"
                                                                    }
                                                                },
                                                                "required": [
                                                                    "250",
                                                                    "500"
                                                                ]
                                                            },
                                                            "1:1": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "70": {
                                                                        "title": "1:1 crop at 70px width",
                                                                        "type": "string",
                                                                        "format": "uri",
                                                                        "pattern": "^https://"
                                                                    },
                                                                    "140": {
                                                                        "title": "1:1 crop at 140px width",
                                                                        "type": "string",
                                                                        "format": "uri",
                                                                        "pattern": "^https://"
                                                                    }
                                                                },
                                                                "required": [
                                                                    "70",
                                                                    "140"
                                                                ]
                                                            }
                                                        },
                                                        "required": [
                                                            "16:9",
                                                            "1:1"
                                                        ]
                                                    }
                                                },
                                                "required": [
                                                    "alt",
                                                    "sizes"
                                                ]
                                            }
                                        },
                                        "required": [
                                            "thumbnail"
                                        ]
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "allOf": [
                            {
                                "type": "object",
                                "required": [
                                    "type"
                                ]
                            },
                            {
                                "oneOf": [
                                    {
                                        "allOf": [
                                            {
                                                "properties": {
                                                    "type": {
                                                        "type": "string",
                                                        "enum": [
                                                            "collection"
                                                        ]
                                                    }
                                                }
                                            },
                                            {
                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                "title": "Collection snippet",
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/id"
                                                    },
                                                    "title": {
                                                        "description": "Title",
                                                        "type": "string"
                                                    },
                                                    "impactStatement": {
                                                        "description": "Description of the collection",
                                                        "type": "string"
                                                    },
                                                    "updated": {
                                                        "description": "Updated date (UTC)",
                                                        "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/published"
                                                    },
                                                    "image": {
                                                        "type": "object",
                                                        "properties": {
                                                            "thumbnail": {
                                                                "$ref": "#/properties/items/items/oneOf/1/allOf/1/properties/image/properties/thumbnail"
                                                            }
                                                        },
                                                        "required": [
                                                            "thumbnail"
                                                        ]
                                                    },
                                                    "subjects": {
                                                        "description": "Collection subjects",
                                                        "type": "array",
                                                        "items": {
                                                            "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/subjects/items"
                                                        }
                                                    },
                                                    "selectedCurator": {
                                                        "allOf": [
                                                            {
                                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                                "title": "Person snippet",
                                                                "type": "object",
                                                                "allOf": [
                                                                    {
                                                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                                                        "title": "Person",
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "name": {
                                                                                "title": "Name",
                                                                                "type": "object",
                                                                                "properties": {
                                                                                    "preferred": {
                                                                                        "title": "Preferred name",
                                                                                        "description": "This is generally the name that is used by the person for English-language publications.\n\nFor example:\n  - Randy Schekman\n  - K. VijayRaghavan\n  - Li Wenhui\n",
                                                                                        "type": "string",
                                                                                        "minLength": 1
                                                                                    },
                                                                                    "index": {
                                                                                        "title": "Index name",
                                                                                        "description": "This is the name that should be used for indexing people.\n\nFor example:\n  - Schekman, Randy\n  - VijayRaghavan, Krishnaswamy\n  - Li Wenhui\n"
                                                                                    }
                                                                                },
                                                                                "required": [
                                                                                    "preferred",
                                                                                    "index"
                                                                                ]
                                                                            },
                                                                            "orcid": {
                                                                                "title": "ORCID",
                                                                                "type": "string",
                                                                                "pattern": "^[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{3}[0-9X]$"
                                                                            }
                                                                        },
                                                                        "required": [
                                                                            "name"
                                                                        ]
                                                                    },
                                                                    {
                                                                        "properties": {
                                                                            "id": {
                                                                                "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/id"
                                                                            },
                                                                            "type": {
                                                                                "title": "Type",
                                                                                "type": "string",
                                                                                "enum": [
                                                                                    "director",
                                                                                    "executive",
                                                                                    "leadership",
                                                                                    "reviewing-editor",
                                                                                    "senior-editor"
                                                                                ]
                                                                            },
                                                                            "image": {
                                                                                "$ref": "#/properties/items/items/oneOf/1/allOf/1/properties/image/properties/thumbnail"
                                                                            }
                                                                        },
                                                                        "required": [
                                                                            "id",
                                                                            "type"
                                                                        ]
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "properties": {
                                                                    "etAl": {
                                                                        "description": "If there are more curators.",
                                                                        "type": "boolean",
                                                                        "default": false
                                                                    }
                                                                }
                                                            }
                                                        ]
                                                    }
                                                },
                                                "required": [
                                                    "id",
                                                    "title",
                                                    "updated",
                                                    "image",
                                                    "selectedCurator"
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "allOf": [
                                            {
                                                "properties": {
                                                    "type": {
                                                        "type": "string",
                                                        "enum": [
                                                            "external-article"
                                                        ]
                                                    }
                                                }
                                            },
                                            {
                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                "title": "External article",
                                                "type": "object",
                                                "properties": {
                                                    "articleTitle": {
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "journal": {
                                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                                        "title": "Place",
                                                        "type": "object",
                                                        "properties": {
                                                            "id": {
                                                                "title": "Google Place ID",
                                                                "type": "string",
                                                                "minLength": 1
                                                            },
                                                            "coordinates": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "latitude": {
                                                                        "type": "number",
                                                                        "maximum": 90,
                                                                        "minimum": -90
                                                                    },
                                                                    "longitude": {
                                                                        "type": "number",
                                                                        "maximum": 180,
                                                                        "minimum": -180
                                                                    }
                                                                },
                                                                "required": [
                                                                    "latitude",
                                                                    "longitude"
                                                                ]
                                                            },
                                                            "name": {
                                                                "type": "array",
                                                                "items": {
                                                                    "type": "string",
                                                                    "minLength": 1
                                                                },
                                                                "minItems": 1
                                                            },
                                                            "address": {
                                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                                "title": "Address",
                                                                "type": "object",
                                                                "properties": {
                                                                    "formatted": {
                                                                        "title": "Formatted address",
                                                                        "type": "array",
                                                                        "items": {
                                                                            "type": "string",
                                                                            "minLength": 1
                                                                        },
                                                                        "minItems": 1
                                                                    },
                                                                    "components": {
                                                                        "title": "Address components",
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "streetAddress": {
                                                                                "type": "array",
                                                                                "items": {
                                                                                    "type": "string",
                                                                                    "minLength": 1
                                                                                }
                                                                            },
                                                                            "locality": {
                                                                                "type": "array",
                                                                                "items": {
                                                                                    "type": "string",
                                                                                    "minLength": 1
                                                                                }
                                                                            },
                                                                            "area": {
                                                                                "type": "array",
                                                                                "items": {
                                                                                    "type": "string",
                                                                                    "minLength": 1
                                                                                }
                                                                            },
                                                                            "country": {
                                                                                "type": "string",
                                                                                "minLength": 1
                                                                            },
                                                                            "postalCode": {
                                                                                "type": "string",
                                                                                "minLength": 1
                                                                            }
                                                                        },
                                                                        "minProperties": 1
                                                                    }
                                                                },
                                                                "required": [
                                                                    "formatted",
                                                                    "components"
                                                                ]
                                                            }
                                                        },
                                                        "required": [
                                                            "name"
                                                        ],
                                                        "dependencies": {
                                                            "id": [
                                                                "coordinates"
                                                            ],
                                                            "coordinates": [
                                                                "address"
                                                            ]
                                                        }
                                                    },
                                                    "authorLine": {
                                                        "description": "For example:\n  - Ian T Baldwin\n  - Randy Schekman, Mark Patterson\n  - Lee R Berger et al\n",
                                                        "type": "string",
                                                        "minLength": 1
                                                    },
                                                    "uri": {
                                                        "type": "string",
                                                        "format": "uri"
                                                    }
                                                },
                                                "required": [
                                                    "articleTitle",
                                                    "journal",
                                                    "authorLine",
                                                    "uri"
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "allOf": [
                                            {
                                                "properties": {
                                                    "type": {
                                                        "type": "string",
                                                        "enum": [
                                                            "podcast-episode"
                                                        ]
                                                    }
                                                }
                                            },
                                            {
                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                "title": "Podcast episode snippet",
                                                "type": "object",
                                                "properties": {
                                                    "number": {
                                                        "description": "Number",
                                                        "type": "integer",
                                                        "minimum": 1
                                                    },
                                                    "title": {
                                                        "description": "Title",
                                                        "type": "string"
                                                    },
                                                    "impactStatement": {
                                                        "description": "Description of the episode",
                                                        "type": "string"
                                                    },
                                                    "published": {
                                                        "description": "Publication date (UTC)",
                                                        "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/published"
                                                    },
                                                    "image": {
                                                        "type": "object",
                                                        "properties": {
                                                            "thumbnail": {
                                                                "$ref": "#/properties/items/items/oneOf/1/allOf/1/properties/image/properties/thumbnail"
                                                            }
                                                        },
                                                        "required": [
                                                            "thumbnail"
                                                        ]
                                                    },
                                                    "sources": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "object",
                                                            "properties": {
                                                                "mediaType": {
                                                                    "allOf": [
                                                                        {
                                                                            "$schema": "http://json-schema.org/draft-04/schema#",
                                                                            "title": "Media type",
                                                                            "type": "string",
                                                                            "pattern": "^([a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+/[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+)(; *[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+=(([a-zA-Z0-9\\.\\-]+)|(\".+\")))*$"
                                                                        },
                                                                        {
                                                                            "pattern": "^audio/"
                                                                        }
                                                                    ]
                                                                },
                                                                "uri": {
                                                                    "title": "URI",
                                                                    "type": "string",
                                                                    "format": "uri",
                                                                    "pattern": "^https://"
                                                                }
                                                            },
                                                            "required": [
                                                                "mediaType",
                                                                "uri"
                                                            ]
                                                        },
                                                        "minItems": 1
                                                    },
                                                    "subjects": {
                                                        "description": "Episode subjects",
                                                        "type": "array",
                                                        "items": {
                                                            "$ref": "#/properties/items/items/oneOf/0/allOf/0/properties/subjects/items"
                                                        }
                                                    }
                                                },
                                                "required": [
                                                    "number",
                                                    "title",
                                                    "published",
                                                    "image",
                                                    "sources"
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
