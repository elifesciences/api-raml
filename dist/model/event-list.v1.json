{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Event",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of events",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Events",
            "type": "array",
            "items": {
                "$schema": "http://json-schema.org/draft-04/schema#",
                "title": "Event snippet",
                "type": "object",
                "properties": {
                    "id": {
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "eLife ID",
                        "type": "string",
                        "pattern": "^[a-z0-9-]+$"
                    },
                    "title": {
                        "description": "Title",
                        "type": "string"
                    },
                    "impactStatement": {
                        "description": "Description of the article",
                        "type": "string"
                    },
                    "starts": {
                        "description": "Start date/time (UTC)",
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "Date-time ISO8601 with numeric UTC timezone",
                        "type": "string",
                        "format": "date-time",
                        "pattern": "^....-..-..T..:..:..Z$"
                    },
                    "ends": {
                        "description": "Ends date/time (UTC)",
                        "$ref": "#/properties/items/items/properties/starts"
                    },
                    "timezone": {
                        "description": "Timezone (from the IANA time zone database) for non-online events",
                        "type": "string",
                        "pattern": "^[A-Za-z]+(/[A-Za-z_-]+)+$"
                    }
                },
                "required": [
                    "id",
                    "title",
                    "starts",
                    "ends"
                ]
            },
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
