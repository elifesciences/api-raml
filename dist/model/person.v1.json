{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Person",
    "type": "object",
    "allOf": [
        {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "Person snippet",
            "type": "object",
            "allOf": [
                {
                    "$schema": "http://json-schema.org/draft-04/schema#",
                    "title": "Person",
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Name",
                            "type": "object",
                            "properties": {
                                "preferred": {
                                    "title": "Preferred name",
                                    "description": "This is generally the name that is used by the person for English-language publications.\n\nFor example:\n  - Randy Schekman\n  - K. VijayRaghavan\n  - Li Wenhui\n",
                                    "type": "string",
                                    "minLength": 1
                                },
                                "index": {
                                    "title": "Index name",
                                    "description": "This is the name that should be used for indexing people.\n\nFor example:\n  - Schekman, Randy\n  - VijayRaghavan, Krishnaswamy\n  - Li Wenhui\n"
                                }
                            },
                            "required": [
                                "preferred",
                                "index"
                            ]
                        },
                        "orcid": {
                            "title": "ORCID",
                            "type": "string",
                            "pattern": "^[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{3}[0-9X]$"
                        }
                    },
                    "required": [
                        "name"
                    ]
                },
                {
                    "properties": {
                        "id": {
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "title": "eLife ID",
                            "type": "string",
                            "pattern": "^[a-z0-9-]+$"
                        },
                        "type": {
                            "title": "Type",
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "enum": [
                                        "director",
                                        "early-career",
                                        "executive",
                                        "leadership",
                                        "reviewing-editor",
                                        "senior-editor"
                                    ]
                                },
                                "label": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "required": [
                                "id",
                                "label"
                            ]
                        },
                        "image": {
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "title": "IIIF image",
                            "type": "object",
                            "allOf": [
                                {
                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                    "title": "Has attribution",
                                    "type": "object",
                                    "properties": {
                                        "attribution": {
                                            "title": "Attribution",
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                {
                                    "properties": {
                                        "uri": {
                                            "title": "IIIF Image",
                                            "type": "string",
                                            "format": "uri",
                                            "pattern": "^https://[^/]+(?:/[^?#\\[\\]@]+)?/[^/?#\\[\\]@]+$"
                                        },
                                        "alt": {
                                            "title": "Alternative text",
                                            "type": "string"
                                        },
                                        "source": {
                                            "$schema": "http://json-schema.org/draft-04/schema#",
                                            "title": "File",
                                            "type": "object",
                                            "properties": {
                                                "mediaType": {
                                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                                    "title": "Media type",
                                                    "type": "string",
                                                    "pattern": "^([a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+/[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+)(; *[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+=(([a-zA-Z0-9\\.\\-]+)|(\".+\")))*$"
                                                },
                                                "uri": {
                                                    "title": "Source data URI",
                                                    "type": "string",
                                                    "format": "uri"
                                                },
                                                "filename": {
                                                    "title": "Filename",
                                                    "type": "string",
                                                    "pattern": "^[A-Za-z0-9_. ()-]+\\.[a-z0-9]+$"
                                                }
                                            },
                                            "required": [
                                                "mediaType",
                                                "uri",
                                                "filename"
                                            ]
                                        },
                                        "size": {
                                            "type": "object",
                                            "properties": {
                                                "width": {
                                                    "type": "integer",
                                                    "minimum": 1
                                                },
                                                "height": {
                                                    "type": "integer",
                                                    "minimum": 1
                                                }
                                            },
                                            "required": [
                                                "width",
                                                "height"
                                            ]
                                        },
                                        "focalPoint": {
                                            "type": "object",
                                            "title": "Focal point",
                                            "description": "Point on the image that is considered to be the focal point of the image.\n\nIf not present, 50 can be used for both `x` and `y`.\n",
                                            "properties": {
                                                "x": {
                                                    "description": "Percentage on the horizontal axis.\n",
                                                    "type": "integer",
                                                    "minimum": 0,
                                                    "maximum": 100
                                                },
                                                "y": {
                                                    "description": "Percentage on the vertical axis.\n",
                                                    "type": "integer",
                                                    "minimum": 0,
                                                    "maximum": 100
                                                }
                                            },
                                            "required": [
                                                "x",
                                                "y"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "uri",
                                        "alt",
                                        "source",
                                        "size"
                                    ]
                                }
                            ]
                        }
                    },
                    "required": [
                        "id",
                        "type"
                    ]
                }
            ]
        },
        {
            "properties": {
                "name": {
                    "properties": {
                        "givenNames": {
                            "title": "Given names",
                            "description": "The given names of the person.\n\nFor example:\n    - Randy\n"
                        },
                        "surname": {
                            "title": "Surname",
                            "description": "The surname of the person.\n\nFor example:\n    - Schekman\n"
                        }
                    }
                },
                "affiliations": {
                    "type": "array",
                    "items": {
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "Place",
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "minLength": 1
                                },
                                "minItems": 1
                            },
                            "address": {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "Address",
                                "type": "object",
                                "properties": {
                                    "formatted": {
                                        "title": "Formatted address",
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "minItems": 1
                                    },
                                    "components": {
                                        "title": "Address components",
                                        "type": "object",
                                        "properties": {
                                            "streetAddress": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string",
                                                    "minLength": 1
                                                }
                                            },
                                            "locality": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string",
                                                    "minLength": 1
                                                }
                                            },
                                            "area": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string",
                                                    "minLength": 1
                                                }
                                            },
                                            "country": {
                                                "type": "string",
                                                "minLength": 1
                                            },
                                            "postalCode": {
                                                "type": "string",
                                                "minLength": 1
                                            }
                                        },
                                        "minProperties": 1
                                    }
                                },
                                "required": [
                                    "formatted",
                                    "components"
                                ]
                            }
                        },
                        "required": [
                            "name"
                        ]
                    }
                },
                "emailAddresses": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "type": "string",
                                "format": "email"
                            },
                            "access": {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "Access level",
                                "type": "string",
                                "enum": [
                                    "public",
                                    "restricted"
                                ]
                            }
                        },
                        "required": [
                            "value",
                            "access"
                        ]
                    }
                },
                "research": {
                    "title": "Research details",
                    "type": "object",
                    "properties": {
                        "expertises": {
                            "title": "Expertises",
                            "type": "array",
                            "items": {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "Subject snippet",
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "$ref": "#/allOf/0/allOf/1/properties/id"
                                    },
                                    "name": {
                                        "description": "Name",
                                        "type": "string",
                                        "minLength": 1
                                    }
                                },
                                "required": [
                                    "id",
                                    "name"
                                ]
                            },
                            "minItems": 1,
                            "uniqueItems": true
                        },
                        "focuses": {
                            "title": "Research focuses",
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "uniqueItems": true
                        },
                        "organisms": {
                            "title": "Research organisms",
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "uniqueItems": true
                        }
                    },
                    "required": [
                        "expertises",
                        "focuses"
                    ]
                },
                "profile": {
                    "title": "Profile",
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "Paragraph",
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "paragraph"
                                        ]
                                    },
                                    "text": {
                                        "title": "Text",
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "type",
                                    "text"
                                ]
                            }
                        ]
                    }
                },
                "competingInterests": {
                    "title": "Competing interests statement",
                    "type": "string"
                }
            }
        }
    ]
}
