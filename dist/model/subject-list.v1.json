{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Subject list",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of subjects",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Subjects",
            "type": "array",
            "items": {
                "$schema": "http://json-schema.org/draft-04/schema#",
                "title": "Subject",
                "type": "object",
                "allOf": [
                    {
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "title": "Subject snippet",
                        "type": "object",
                        "properties": {
                            "id": {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "eLife ID",
                                "type": "string",
                                "pattern": "^[a-z0-9-]+$"
                            },
                            "name": {
                                "description": "Name",
                                "type": "string",
                                "minLength": 1
                            }
                        },
                        "required": [
                            "id",
                            "name"
                        ]
                    },
                    {
                        "properties": {
                            "impactStatement": {
                                "description": "Description of the subject",
                                "type": "string"
                            },
                            "image": {
                                "type": "object",
                                "properties": {
                                    "banner": {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "IIIF image",
                                        "type": "object",
                                        "properties": {
                                            "uri": {
                                                "title": "IIIF Image",
                                                "type": "string",
                                                "format": "uri",
                                                "pattern": "^https://"
                                            },
                                            "alt": {
                                                "title": "Alternative text",
                                                "type": "string"
                                            },
                                            "source": {
                                                "$schema": "http://json-schema.org/draft-04/schema#",
                                                "title": "File",
                                                "type": "object",
                                                "properties": {
                                                    "mediaType": {
                                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                                        "title": "Media type",
                                                        "type": "string",
                                                        "pattern": "^([a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+/[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+)(; *[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+=(([a-zA-Z0-9\\.\\-]+)|(\".+\")))*$"
                                                    },
                                                    "uri": {
                                                        "title": "Source data URI",
                                                        "type": "string",
                                                        "format": "uri"
                                                    },
                                                    "filename": {
                                                        "title": "Filename",
                                                        "type": "string",
                                                        "pattern": "^[A-Za-z0-9_. ()-]+\\.[a-z0-9]+$"
                                                    }
                                                },
                                                "required": [
                                                    "mediaType",
                                                    "uri",
                                                    "filename"
                                                ]
                                            },
                                            "size": {
                                                "type": "object",
                                                "properties": {
                                                    "width": {
                                                        "type": "integer",
                                                        "minimum": 1
                                                    },
                                                    "height": {
                                                        "type": "integer",
                                                        "minimum": 1
                                                    }
                                                },
                                                "required": [
                                                    "width",
                                                    "height"
                                                ]
                                            },
                                            "focalPoint": {
                                                "type": "object",
                                                "title": "Focal point",
                                                "description": "Point on the image that is considered to be the focal point of the image.\n\nIf not present, 50 can be used for both `x` and `y`.\n",
                                                "properties": {
                                                    "x": {
                                                        "description": "Percentage on the horizontal axis.\n",
                                                        "type": "integer",
                                                        "minimum": 0,
                                                        "maximum": 100
                                                    },
                                                    "y": {
                                                        "description": "Percentage on the vertical axis.\n",
                                                        "type": "integer",
                                                        "minimum": 0,
                                                        "maximum": 100
                                                    }
                                                },
                                                "required": [
                                                    "x",
                                                    "y"
                                                ]
                                            }
                                        },
                                        "required": [
                                            "uri",
                                            "alt",
                                            "source",
                                            "size"
                                        ]
                                    },
                                    "thumbnail": {
                                        "$ref": "#/properties/items/items/allOf/1/properties/image/properties/banner"
                                    }
                                },
                                "required": [
                                    "banner",
                                    "thumbnail"
                                ]
                            }
                        },
                        "required": [
                            "impactStatement",
                            "image"
                        ]
                    }
                ]
            },
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
