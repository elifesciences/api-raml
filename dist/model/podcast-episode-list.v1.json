{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Podcast episode list",
    "type": "object",
    "properties": {
        "total": {
            "title": "Total number of podcast episodes",
            "type": "integer",
            "minimum": 0
        },
        "items": {
            "title": "Episodes",
            "type": "array",
            "items": {
                "$schema": "http://json-schema.org/draft-04/schema#",
                "title": "Podcast episode snippet",
                "type": "object",
                "properties": {
                    "number": {
                        "description": "Number",
                        "type": "integer",
                        "minimum": 1
                    },
                    "title": {
                        "description": "Title",
                        "type": "string"
                    },
                    "impactStatement": {
                        "description": "Description of the episode",
                        "type": "string"
                    },
                    "published": {
                        "title": "Publication date (UTC)",
                        "$schema": "http://json-schema.org/draft-04/schema#",
                        "description": "eLife restriction over the ISO8601 standard\n\nFor example:\n    - 2016-09-16T12:34:56Z\n",
                        "type": "string",
                        "format": "date-time",
                        "pattern": "^....-..-..T..:..:..Z$"
                    },
                    "updated": {
                        "title": "Updated date (UTC)",
                        "$ref": "#/properties/items/items/properties/published"
                    },
                    "image": {
                        "type": "object",
                        "properties": {
                            "thumbnail": {
                                "$schema": "http://json-schema.org/draft-04/schema#",
                                "title": "IIIF image",
                                "type": "object",
                                "properties": {
                                    "uri": {
                                        "title": "IIIF Image",
                                        "type": "string",
                                        "format": "uri",
                                        "pattern": "^https://"
                                    },
                                    "alt": {
                                        "title": "Alternative text",
                                        "type": "string"
                                    },
                                    "source": {
                                        "$schema": "http://json-schema.org/draft-04/schema#",
                                        "title": "File",
                                        "type": "object",
                                        "properties": {
                                            "mediaType": {
                                                "$ref": "#/properties/items/items/properties/sources/items/properties/mediaType/allOf/0"
                                            },
                                            "uri": {
                                                "title": "Source data URI",
                                                "type": "string",
                                                "format": "uri"
                                            },
                                            "filename": {
                                                "title": "Filename",
                                                "type": "string",
                                                "pattern": "^[A-Za-z0-9_. ()-]+\\.[a-z0-9]+$"
                                            }
                                        },
                                        "required": [
                                            "mediaType",
                                            "uri",
                                            "filename"
                                        ]
                                    },
                                    "size": {
                                        "type": "object",
                                        "properties": {
                                            "width": {
                                                "type": "integer",
                                                "minimum": 1
                                            },
                                            "height": {
                                                "type": "integer",
                                                "minimum": 1
                                            }
                                        },
                                        "required": [
                                            "width",
                                            "height"
                                        ]
                                    },
                                    "focalPoint": {
                                        "type": "object",
                                        "title": "Focal point",
                                        "description": "Point on the image that is considered to be the focal point of the image.\n\nIf not present, 50 can be used for both `x` and `y`.\n",
                                        "properties": {
                                            "x": {
                                                "description": "Percentage on the horizontal axis.\n",
                                                "type": "integer",
                                                "minimum": 0,
                                                "maximum": 100
                                            },
                                            "y": {
                                                "description": "Percentage on the vertical axis.\n",
                                                "type": "integer",
                                                "minimum": 0,
                                                "maximum": 100
                                            }
                                        },
                                        "required": [
                                            "x",
                                            "y"
                                        ]
                                    }
                                },
                                "required": [
                                    "uri",
                                    "alt",
                                    "source",
                                    "size"
                                ]
                            }
                        },
                        "required": [
                            "thumbnail"
                        ]
                    },
                    "sources": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "mediaType": {
                                    "allOf": [
                                        {
                                            "$schema": "http://json-schema.org/draft-04/schema#",
                                            "title": "Media type",
                                            "type": "string",
                                            "pattern": "^([a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+/[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+)(; *[a-zA-Z0-9!#$%^&\\*_\\-\\+{}\\|'.`~]+=(([a-zA-Z0-9\\.\\-]+)|(\".+\")))*$"
                                        },
                                        {
                                            "pattern": "^audio/"
                                        }
                                    ]
                                },
                                "uri": {
                                    "title": "URI",
                                    "type": "string",
                                    "format": "uri",
                                    "pattern": "^https://"
                                }
                            },
                            "required": [
                                "mediaType",
                                "uri"
                            ]
                        },
                        "minItems": 1
                    },
                    "subjects": {
                        "description": "Episode subjects",
                        "type": "array",
                        "items": {
                            "$schema": "http://json-schema.org/draft-04/schema#",
                            "title": "Subject snippet",
                            "type": "object",
                            "properties": {
                                "id": {
                                    "$schema": "http://json-schema.org/draft-04/schema#",
                                    "title": "eLife ID",
                                    "type": "string",
                                    "pattern": "^[a-z0-9-]+$"
                                },
                                "name": {
                                    "description": "Name",
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "required": [
                                "id",
                                "name"
                            ]
                        }
                    }
                },
                "required": [
                    "number",
                    "title",
                    "published",
                    "image",
                    "sources"
                ]
            },
            "uniqueItems": true
        }
    },
    "required": [
        "total",
        "items"
    ]
}
